<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.riptidez.notebackend.note.mapper.NoteMapper">

    <!-- 映射 Note 实体 -->
    <resultMap id="NoteResultMap" type="Note">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="currentHistoryId" column="current_history_id"/>
    </resultMap>

    <!--  -->
    <insert id="insert" parameterType="Note" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO note (user_id,
                          current_history_id)
        VALUES (#{userId},
                #{currentHistoryId})
    </insert>

    <!--  -->
    <select id="findById" parameterType="long" resultMap="NoteResultMap">
        SELECT id,
               user_id,
               current_history_id
        FROM note
        WHERE id = #{id}
    </select>

    <!--  -->
    <select id="findByUserId" parameterType="long" resultMap="NoteResultMap">
        SELECT id,
               user_id,
               current_history_id
        FROM note
        WHERE user_id = #{userId}
        ORDER BY id
    </select>

    <!--  -->
    <update id="updateCurrentHistoryId">
        UPDATE note
        SET current_history_id = #{currentHistoryId}
        WHERE id = #{id}
    </update>

</mapper>