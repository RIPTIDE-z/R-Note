{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "qt-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "$env{QTDIR}"
      }
    },
    {
      "name": "qt-msvc-debug",
      "displayName": "MSVC Debug",
      "inherits": "qt-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Debug(msvc)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "qt-msvc-release",
      "displayName": "MSVC Release",
      "inherits": "qt-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/Release(msvc)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "qt-msvc-debug",
      "configurePreset": "qt-msvc-debug"
    },
    {
      "name": "qt-msvc-release",
      "configurePreset": "qt-msvc-release"
    }
  ]
}